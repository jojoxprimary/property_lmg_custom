<odoo>
    <data noupdate="1">
        <record id="mail_template_rental_proposal" model="mail.template">
            <field name="name">Rental Proposal Template</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Rental Proposal {{ object.name }} - Awaiting Your Review</field>
            <field name="email_from">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.partner_id.name or ''">Customer</t>,
                        <br/><br/>
                        We are pleased to present your rental proposal <strong t-out="object.name or ''">SO00X</strong>.
                        <br/><br/>
                        
                        Please review the attached proposal and sign to proceed.
                        <br/><br/>
                        
                        If you have any questions, please don't hesitate to contact us.
                        <br/><br/>
                        Best regards,<br/>
                        <t t-out="object.user_id.name or ''">Salesperson</t><br/>
                        <t t-out="object.company_id.name or ''">Company</t>
                    </p>
                </div>
            </field>
            <field name="report_template_ids" eval="[(4, ref('property_lmg_custom.action_report_rental_quotation'))]"/>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>