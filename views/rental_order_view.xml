<odoo>
    <record id="view_rental_order_form_inherit_substate" model="ir.ui.view">
        <field name="name">rental.order.form.substate.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_renting.rental_order_primary_form_view"/>
        <field name="arch" type="xml">

            <!-- DEBUG INFO BLOCK -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info" role="alert" style="margin-bottom: 0;">
                    <strong>Debug Info:</strong>
                    <ul>
                        <li>Is Rental Order: <field name="is_rental_order" readonly="1"/></li>
                        <li>Substate: <field name="substate_name" readonly="1"/></li>
                    </ul>
                </div>
            </xpath>

            <!-- CUSTOMIZED BUTTONS -->
            <xpath expr="//header/*[1]" position="before">
                <!-- Submit for Review Button -->
                <button
                    name="action_send_for_review"
                    string="Submit for Review"
                    type="object"
                    class="btn-primary"
                    confirm="Are you sure you want to send this proposal for review?"
                    invisible="substate_name != 'Proposal'"
                />
                <!-- Send Proposal Button -->
                <button
                    name="action_send_proposal"
                    string="Send Proposal"
                    type="object"
                    class="btn-primary"
                    invisible="substate_name != 'For Review'"
                    confirm="Are you sure you want to approve and send this proposal?"
                />
                <!-- Confirm Payment Button -->
                <button
                    name="action_confirm_payment"
                    string="Confirm Payment"
                    type="object"
                    class="btn-primary"
                    invisible="substate_name != 'Proposal Signed'"
                    confirm="Confirming a payment will send a Rent Agreement email to the customer. Are you sure you want to proceed?"
                />
            </xpath>


            <!-- OVERRIDE DEFAULT BUTTONS  -->
            <!-- Hide Send by Email Button (Primary - in draft state) -->
            <xpath expr="//header/button[@id='send_by_email_primary']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Hide Send by Email Button (Secondary - in sent/sale state) -->
            <xpath expr="//header/button[@id='send_by_email']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- Remove btn-primary of confirm button in sent state-->
            <xpath expr="//button[@name='action_confirm'][@id='action_confirm']" position="attributes">
                <attribute name="class">btn</attribute>
            </xpath>

            <!-- CUSTOM PILL BADGES -->
            <!-- Custom Pill Badge for Proposal Sent -->
            <xpath expr="//div[@name='button_box']" position="after">
                <div name="waiting_signature_pill" 
                     class="float-end badge rounded-pill fw-bold text-bg-info"
                     invisible="state != 'sent' or substate_name != 'Proposal Sent'">
                    Waiting for Client Signature
                </div>
            </xpath>

            <!-- CUSTOM FIELDS -->
            <!-- Payment Attachment Field - to update every succeeding substate-->
            <xpath expr="//sheet/notebook" position="before">
                <group
                    name="payment_attachment_group"
                    string="Payment Details"
                    invisible="not (substate_name in ['Proposal Signed', 'Payment Confirmed', 'Rental Agreement Sent', 'Rental Agreement Signed'])">
                    <field name="payment_attachment" filename="payment_attachment_filename"/>
                </group>
            </xpath>

        </field>
    </record>

    <!-- Separate record to override subscription quotation pill -->
    <record id="view_subscription_quotation_pill_override" model="ir.ui.view">
        <field name="name">subscription.quotation.pill.override</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_order_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='subscription_quotation_pill']" position="replace">
                <div name="subscription_quotation_pill" class="float-end badge rounded-pill fw-bold text-bg-info"
                     invisible="subscription_state != '1_draft' or state not in ['draft', 'sent'] or substate_name != 'Rental Agreement Sent'">
                    Waiting for Client Signature
                </div>
            </xpath>
        </field>
    </record>

    <!-- SUBSTATE TO SHOW ONLY IN RENTAL ORDER VIEW  -->
    <record id="view_order_form_hide_substate_sales" model="ir.ui.view">
        <field name="name">sale.order.form.hide.substate.sales</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='substate_id']" position="attributes">
                <attribute name="invisible">not is_rental_order</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_rental_order" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>